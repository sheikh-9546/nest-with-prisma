{
  "watch": [
    "src",
    "prisma/schema.prisma",
    ".env",
    "development.env"
  ],
  "ext": "ts,js,json,prisma,env",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "coverage",
    "uploads",
    "tests"
  ],
  "exec": "nest start",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "colours": true
}

